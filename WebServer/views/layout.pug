// HEADER
header
  // TOP HEADER
  #top-header
    .container
      ul.header-links.pull-right
       if user
        li
         a(href='/users/member')
            i.fa.fa-user-o
            |  #{user.firstname}
        li
         a(href='/users/logout')
            i.fa.fa-user-o
            |  Logout
        if user.admin
          li
            a(href='/upload')
              i.fa.fa-user-o
              |  add product
          li

       else
        li
          a(href='/users/login')
            i.fa.fa-user-o
            |  Login
        li
          a(href='/users/register')
            i.fa.fa-user-o
            |  Sign-Up
  // /TOP HEADER
  // MAIN HEADER
  #header
    // container
    .container
      // row
      .row
        // LOGO
        .col-md-3
          .header-logo
            a.logo(href='/')
              img(src='/img/logo.png' alt='')
        // /LOGO
        // SEARCH BAR
        .col-md-6
          .header-search
            form(action='/search' method='get')
              select.input-select
                option(value='0') All Categories
                option(value='1') Category 01
                option(value='1') Category 02
              input.input(name='keyword' placeholder='Search here')
              button.search-btn(type='summit') Search
        // /SEARCH BAR
        // ACCOUNT
        .col-md-3.clearfix
          .header-ctn
            if user
             .dropdown
              a.dropdown-toggle(href='/cart/show')
                i.fa.fa-shopping-cart
                span Your Cart
                
            
            // Menu Toogle
            .menu-toggle
              a(href='#')
                i.fa.fa-bars
                span Menu
            // /Menu Toogle
        // /ACCOUNT
      // row
    // container
  // /MAIN HEADER
// /HEADER
// NAVIGATION
	
block content

